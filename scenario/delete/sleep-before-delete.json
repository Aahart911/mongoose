{
	"type" : "sequential",
	"config" : {
		"item" : {
			"container" : {
				"name" : "linear-sleep-and-delete"
			},
			"load" : {
				"limit" : {
					"count" : 1000
				}
			}
		}
	},
	"jobs": [
		{
			"type": "load",
			"config" : {
				"item" : {
					"dst" : {
						"file" : "/tmp/scenario-linear-sleep-and-delete.csv"
					}
				}
			}
		}, {
			// sleep 15 seconds between the jobs executed sequentially
			"type" : "sleep",
			"value" : "15s"
		},
		{
			"type": "load",
			"config" : {
				"item" : {
					"src" : {
						"file" : "/tmp/scenario-linear-sleep-and-delete.csv"
					}
				},
				"load" : {
					"type" : "delete"
				}
			}
		}
	]
}
