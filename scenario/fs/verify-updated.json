{
	"type" : "sequential",
	"config" : {
		"item" : {
			"container" : {
				"name" : "/tmp/scenario-fs-verify-updated"
			}
		},
		"load" : {
			"limit" : {
				"count" : 100
			},
			"threads" : 2
		},
		"storage" : {
			"type" : "fs"
		}
	},
	"jobs": [
		{
			// write new data
			"type" : "load",
			"config" : {
				"item" : {
					"dst" : {
						"file" : "/tmp/scenario-fs-verify-updated-0.csv"
					}
				}
			}
		}, {
			// update the written data
			"type": "load",
			"config" : {
				"item" : {
					"data" : {
						"ranges" : 10 // update 10 random byte ranges per request
					},
					"src" : {
						"file" : "/tmp/scenario-fs-verify-updated-0.csv"
					},
					"dst" : {
						"file" : "/tmp/scenario-fs-verify-updated-1.csv"
					}
				}
			}
		}, {
			// verify the updated data
			"type": "load",
			"config" : {
				"item" : {
					"src" : {
						"file" : "/tmp/scenario-fs-verify-updated-1.csv"
					}
				},
				"load" : {
					"type" : "read"
				}
			}
		}
	]
}
