{
	"$schema" : "http://json-schema.org/draft-04/schema#",
	"id" : "scenario-schema.json",
	"type" : "object",
	"additionalProperties" : false,
	"properties" : {
		"type" : {
			"type" : "string",
			"enum" : [
				"command",
				"load",
				"parallel",
				"precondition",
				"rampup",
				"sequential"
			]
		},
		"jobs" : {
			"type" : "array",
			"items" : {
				"type" : "object",
				"$ref" : "scenario-schema.json"
			}
		},
		"value" : {
			"type" : "string"
		},
		"blocking" : {
			"type" : "boolean"
		},
		"config" : {
			"type": "object",
			"additionalProperties" : false,
			"properties": {
				"auth": {
					"type": "object",
					"properties": {
						"id": {
							"type": [
								"null",
								"string"
							]
						},
						"secret": {
							"type": [
								"null",
								"string"
							]
						},
						"token": {
							"type": [
								"null",
								"string"
							]
						}
					}
				},
				"io": {
					"type": "object",
					"additionalProperties" : false,
					"properties": {
						"buffer": {
							"type": "object",
							"additionalProperties" : false,
							"properties": {
								"size": {
									"type": "object",
									"additionalProperties" : false,
									"properties": {
										"min": {
											"oneOf" : [
												{
													"type": "integer",
													"minimum" : 1
												}, {
													"type" : "string",
													"pattern" : "[\\d\\.]+[KMGTPE]?B?"
												}
											]
										},
										"max": {
											"oneOf" : [
												{
													"type": "integer",
													"minimum" : 1
												}, {
													"type" : "string",
													"pattern" : "[\\d\\.]+[KMGTPE]?B?"
												}
											]
										}
									}
								}
							}
						}
					}
				},
				"item": {
					"type": "object",
					"additionalProperties" : false,
					"properties": {
						"type": {
							"type": "string",
							"enum" : [
								"container",
								"data",
								"token"
							]
						},
						"data": {
							"type": "object",
							"additionalProperties" : false,
							"properties": {
								"content": {
									"type": "object",
									"additionalProperties" : false,
									"properties": {
										"file": {
											"type": [
												"null",
												"string"
											]
										},
										"seed": {
											"type": "string",
											"pattern" : "[A-Fa-f0-9]+"
										},
										"ringSize": {
											"oneOf" : [
												{
													"type": "integer",
													"minimum" : 1
												}, {
													"type" : "string",
													"pattern" : "[\\d\\.]+[KMGTPE]?B?"
												}
											]
										}
									}
								},
								"ranges": {
									"oneOf": [
										{
											"type" : "integer",
											"minimum" : 0
										}, {
											"type" : "string",
											"pattern" : "[\\d]+\\-[\\d]+"
										}
									]
								},
								"size": {
									"oneOf" : [
										{
											"type": "integer",
											"minimum" : 0
										}, {
											"type" : "string",
											"pattern" : "[\\d\\.]+[KMGTPE]?B?"
										}, {
											"type" : "array",
											"items" : {
												"oneOf" : [
													{
														"type": "integer",
														"minimum" : 0
													}, {
														"type" : "string",
														"pattern" : "[\\d\\.]+[KMGTPE]?B?"
													}
												]
											}
										}
									]
								},
								"verify": {
									"type": "boolean"
								}
							}
						},
						"dst": {
							"type": "object",
							"additionalProperties" : false,
							"properties": {
								"container": {
									"type": [
										"null",
										"string"
									]
								},
								"file": {
									"type": [
										"null",
										"string"
									]
								}
							}
						},
						"src": {
							"type": "object",
							"additionalProperties" : false,
							"properties": {
								"container": {
									"type": [
										"null",
										"string"
									]
								},
								"file": {
									"oneOf" : [
										{
											"type" : "null"
										}, {
											"type" : "string"
										}, {
											"type" : "array",
											"items" : {
												"oneOf" : [
													{
														"type" : "null"
													}, {
														"type" : "string"
													}
												]
											}
										}
									]
								},
								"batchSize": {
									"type": "integer",
									"minimum" : 1
								}
							}
						},
						"naming": {
							"type": "object",
							"additionalProperties" : false,
							"properties": {
								"type": {
									"type": "string",
									"enum" : [
										"asc",
										"desc",
										"random"
									]
								},
								"prefix": {
									"type": [
										"null",
										"string"
									]
								},
								"radix": {
									"type": "integer",
									"minimum" : 2,
									"maximum" : 36
								},
								"offset": {
									"type": "integer",
									"minimum" : 0
								},
								"length": {
									"type": "integer",
									"minimum" : 1
								}
							}
						},
						"queue": {
							"type": "object",
							"additionalProperties" : false,
							"properties": {
								"sizeLimit": {
									"type": "integer",
									"minimum" : 0
								}
							}
						}
					}
				},
				"load": {
					"type": "object",
					"additionalProperties" : false,
					"properties": {
						"circular": {
							"type": "boolean"
						},
						"type": {
							"oneOf" : [
								{
									"type" : "string",
									"enum" : [
										"create",
										"read",
										"update",
										"delete"
									]
								}, {
									"type" : "array",
									"items" : {
										"type" : "string",
										"pattern" : "[CcRrEeAaTtDdUuPpLl]+=?[\\d]?%?"
									}
								}
							]
						},
						"threads": {
							"oneOf" : [
								{
									"type" : "integer",
									"minimum" : 1
								}, {
									"type" : "array",
									"items" : {
										"type" : "integer",
										"minimum" : 1
									}
								}
							]
						},
						"limit": {
							"type": "object",
							"additionalProperties" : false,
							"properties": {
								"count": {
									"type": "integer"
								},
								"rate": {
									"type": "number",
									"minimum" : 0
								},
								"size": {
									"oneOf" : [
										{
											"type": "integer",
											"minimum" : 0
										}, {
											"type" : "string",
											"pattern" : "[\\d\\.]+[KMGTPE]?B?\\-?[\\d\\.]?[KMGTPE]?B?"
										}
									]
								},
								"time": {
									"type": "string"
								}
							}
						},
						"metricsPeriod": {
							"oneOf" : [
								{
									"type" : "integer",
									"minimum" : 0
								}, {
									"type" : "string",
									"pattern" : "[\\d]+[SsMmHhDd]?"
								}
							]
						},
						"precondition": {
							"type": "boolean"
						},
						"server": {
							"type": "object",
							"additionalProperties" : false,
							"properties": {
								"addrs": {
									"type": "array",
									"items": {
										"type": "string"
									}
								},
								"nodeMapping": {
									"type": "boolean"
								}
							}
						}
					}
				},
				"network": {
					"type": "object",
					"additionalProperties" : false,
					"properties": {
						"serveJMX": {
							"type": "boolean"
						},
						"socket": {
							"type": "object",
							"additionalProperties" : false,
							"properties": {
								"timeoutMilliSec": {
									"type": "integer",
									"minimum" : 0
								},
								"reuseAddr": {
									"type": "boolean"
								},
								"keepAlive": {
									"type": "boolean"
								},
								"tcpNoDelay": {
									"type": "boolean"
								},
								"linger": {
									"type": "integer",
									"minimum" : 0
								},
								"bindBacklogSize": {
									"type": "integer",
									"minimum" : 0
								},
								"interestOpQueued": {
									"type": "boolean"
								},
								"selectInterval": {
									"type": "integer",
									"minimum" : 0
								}
							}
						},
						"ssl" : {
							"type" : "boolean"
						}
					}
				},
				"run": {
					"type": "object",
					"additionalProperties" : false,
					"properties": {
						"id": {
							"type": [
								"null",
								"string"
							]
						},
						"file": {
							"type": [
								"null",
								"string"
							]
						},
						"mode": {
							"type": "string",
							"enum" : [
								"standalone",
								"client",
								"server",
								"wsmock",
								"webui"
							]
						},
						"name": {
							"type": "string"
						},
						"resume": {
							"type": "object",
							"additionalProperties" : false,
							"properties": {
								"enabled": {
									"type": "boolean"
								}
							}
						},
						"version": {
							"type": "string"
						}
					}
				},
				"storage": {
					"type": "object",
					"additionalProperties" : false,
					"properties": {
						"type": {
							"type": "string",
							"enum" : [
								"fs",
								"http"
							]
						},
						"addrs": {
							"type": "array",
							"items": {
								"type": "string"
							}
						},
						"port": {
							"type": "integer",
							"minimum" : 1
						},
						"http": {
							"type": "object",
							"additionalProperties" : false,
							"properties": {
								"api": {
									"type": "string",
									"pattern" : "[\\w\\d]+"
								},
								"fsAccess": {
									"type": "boolean"
								},
								"headers": {
									"type": "object",
									"properties": {
									}
								},
								"namespace": {
									"type": [
										"null",
										"string"
									]
								},
								"versioning": {
									"type": "boolean"
								}
							}
						},
						"mock": {
							"type": "object",
							"additionalProperties" : false,
							"properties": {
								"headCount": {
									"type": "integer",
									"minimum" : 1
								},
								"capacity": {
									"type": "integer",
									"minimum" : 0
								},
								"container": {
									"type": "object",
									"additionalProperties" : false,
									"properties": {
										"capacity": {
											"type": "integer",
											"minimum" : 0
										},
										"countLimit": {
											"type": "integer",
											"minimum" : 0
										}
									}
								}
							}
						}
					}
				}
			}
		}
	},
	"required" : [
		"type"
	]
}
