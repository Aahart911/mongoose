<!-- Base configuration fields -->
<div id="base">
	<form class="form-horizontal" role="form" id="base-form">
		{{#each sections}}
			<div class="{{classes}}">
				<fieldset>
					<legend>{{title}}</legend>
					{{#each fields}}
						<div class="form-group {{classes}}">
							<label for="duplicate-{{id}}" class="col-sm-3 control-label">
								{{label}}
							</label>
							<div class="col-sm-9">

								{{#if complexField}}
									<div id="duplicate-{{id}}" class="complex" data-pointer="{{id}}">

										<div class="col-xs-5 no-padding">
											<input type="text" id="{{textField.id}}" class="form-control" title=""/>
										</div>

										<div class="col-xs-4 col-lg-3">
											<select class="form-control" id="{{selectField.id}}" title="">
												{{#each selectField.values}}
													<option value="{{this}}">{{this}}</option>
												{{/each}}
											</select>
										</div>

									</div>

								{{else}}
									{{#if textField}}
										<input type="text" id="duplicate-{{id}}" class="form-control"
										       placeholder="{{placeholder}}" data-pointer="{{id}}"/>
									{{/if}}

									{{#if selectField}}
										<div class="col-xs-5 col-sm-4 col-lg-3 form-select">
											<select id="duplicate-{{id}}" class="form-control" data-pointer="{{id}}">
												{{#each values}}
													<option value="{{this}}">{{this}}</option>
												{{/each}}
											</select>
										</div>
									{{/if}}
								{{/if}}
							</div>
						</div>
					{{/each}}
				</fieldset>
			</div>
		{{/each}}
	</form>
</div>