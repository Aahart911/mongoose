<div class="container-fluid">
    <div class="row">

        <!-- Left menu panel -->
        <div id="menu" class="col-xs-12 col-sm-4 col-md-3 col-lg-2 nopadding">
            <div id="config">
                <button type="button" class="btn btn-custom btn-custom-green column-btn-lower"
                        id="start">
                    Start
                </button>
            </div>

            <ul class="folders" id="folders-{{tab-types.[0]}}">
                {{#each scenarios}}
                    {{#with this as |scenarioItem|}}
                        {{#ifObj scenarioItem}}
                            {{#each scenarioItem}}
                                {{#with this as |filesArr|}}
                                    <li class="dir">
                                        <label for="{{@key}}-dir-id">{{@key}}</label>
                                        <input type="checkbox" id="{{@key}}-dir-id">
                                        <ul>
                                            {{#each filesArr}}
                                                {{#with this as |file|}}
                                                    <li class="file">
                                                        <a class="props" href="#{{file}}">
                                                            {{file}}
                                                        </a>
                                                    </li>
                                                {{/with}}
                                            {{/each}}
                                        </ul>
                                    </li>
                                {{/with}}
                            {{/each}}
                        {{else}}
                            <li class="file">
                                <a class="props" href="#{{scenarioItem}}">
                                    {{scenarioItem}}
                                </a>
                            </li>
                        {{/ifObj}}
                    {{/with}}
                {{/each}}
            </ul>

            <ul class="folders" id="folders-{{tab-types.[1]}}"></ul>
        </div>

        <!-- Configuration fields -->
        <div id="main-content" class="col-xs-12 col-sm-8 col-md-9 col-lg-10 nopadding">
        </div>
    </div>
</div>