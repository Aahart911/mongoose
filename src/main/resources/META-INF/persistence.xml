<?xml version="1.0" encoding="utf-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="openjpa">
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<class>com.emc.mongoose.persist.db.entity.StatusEntity</class>
		<class>com.emc.mongoose.persist.db.entity.ModeEntity</class>
		<class>com.emc.mongoose.persist.db.entity.RunEntity</class>
		<class>com.emc.mongoose.persist.db.entity.LevelEntity</class>
		<class>com.emc.mongoose.persist.db.entity.MessageClassEntity</class>
		<class>com.emc.mongoose.persist.db.entity.MessageEntity</class>
		<class>com.emc.mongoose.persist.db.entity.DataObjectEntity</class>
		<class>com.emc.mongoose.persist.db.entity.ApiEntity</class>
		<class>com.emc.mongoose.persist.db.entity.LoadTypeEntity</class>
		<class>com.emc.mongoose.persist.db.entity.LoadEntity</class>
		<class>com.emc.mongoose.persist.db.entity.NodeEntity</class>
		<class>com.emc.mongoose.persist.db.entity.ConnectionEntity</class>
		<class>com.emc.mongoose.persist.db.entity.TraceEntity</class>
		<class>com.emc.mongoose.persist.db.entity.PerfomanceEntity</class>
		<properties>
			<!--<property name="openjpa.RuntimeUnenhancedClasses" value="supported"/>!-->
			<!--<property name="openjpa.DynamicEnhancementAgent" value="true"/>!-->
			<!--<property name="openjpa.jdbc.MappingDefaults"
					  value="ForeignKeyDeleteAction=restrict,JoinForeignKeyDeleteAction=restrict"/>!-->
			<!-- Logging Open JPA !-->
			<property name="openjpa.Log" value="DefaultLevel=TRACE, Tool=INFO, Runtime=WARN, Enhance=WARN"/>
			<!-- For auto creating tables !-->
			<property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)" />
			<!--  Connection Pool  !-->
			<property name="openjpa.ConnectionDriverName"
					  value="org.apache.commons.dbcp2.BasicDataSource"/>
			<property name="openjpa.ConnectionProperties"
					  value="DriverClassName = org.postgresql.Driver,
					 	Url = jdbc:postgresql://localhost:5432/mongoose,
					  	MaxActive = 100,
            			MaxWait = 100,
            			TestOnBorrow = true,
            			Username = mongoose,
            			Password = mongoose"/>
			<!-- Open JPA cache !-->
			<!--<property name="openjpa.DataCache" value="true"/>!-->
			<!--<property name="openjpa.QueryCache" value="true"/>!-->
		</properties>

	</persistence-unit>

</persistence>